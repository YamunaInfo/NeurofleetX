import apiService from "./api_service";
import axios from "axios";

jest.mock("axios");

test("fetch routes API success", async () => {
  axios.get.mockResolvedValue({ data: { route: "A-B" } });
  const result = await apiService.getRoutes();
  expect(result.route).toBe("A-B");
});

test("fetch routes API failure", async () => {
  axios.get.mockRejectedValue(new Error("Network Error"));
  await expect(apiService.getRoutes()).rejects.toThrow("Network Error");
});
